.hero-unit
  %h1 "Wiki!!"
  %p "Add a wiki!!. "
  %p
    = link_to "Create Wiki", new_article_path, :class => "btn primary large"

.row
  - @articles.each do |article|
    %div{ :class => (article == @articles.first ? "span6" : "span5")}
      %h2
        = article.name
      %p
        = h article.content.html_safe
      %p
        = link_to "View details &raquo;".html_safe, article, :class => "btn"



